<div class="container">

  <h2>Add a new restaurant></h2>

<%= simple_form_for [ @restaurant ] do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category, collection: ["chinese", "french", "belgian", "japanese", "italian"] %>
  <%= f.submit "Submit restaurant", class: "btn btn-primary" %>
<% end %>

</div>
